{
  "calendar": {
    "el": "#orbit"
  },
  "colorKey": {
    "el": "#color-key-canvas"
  },
  "videos": [
    {"url": "video/ocean_atmosphere.mp4", "type": "video/mp4"}
  ],
  "globe": {
    "rotateX": [-20, 380],
    "rotateY": [-65, 65],
    "bgWidth": 1024,
    "bgHeight": 512,
    "bgTransparency": 100,
    "annotationLatThreshold": 45,
    "annotationLonThreshold": 30,
    "transitionStep": 0.1,
    "sleepTransitionMs": 2000,
    "markerOpacity": 0.5,
    "circleOpacity": 0.8,
    "markerColor": "$0xhighlight",
    "arrowColor": "0x666666",
    "restingColor": "$0xsecondary"
  },
  "globes": [
    {
      "el": "#ocean-currents",
      "title": "<h2>Ocean</h2><h3>Surface temperature and currents</h3>",
      "viewAngle": 45,
      "near": 0.4,
      "far": 2,
      "radius": 0.5,
      "geojsonLineColor": "#888888"
    },{
      "el": "#atmosphere-wind",
      "title": "<h2>Atmosphere</h2><h3>Air temperature and winds</h3>",
      "videoOffset": 0.5,
      "viewAngle": 45,
      "near": 0.4,
      "far": 2,
      "radius": 0.5,
      "geojsonLineColor": "#888888"
    }
  ],
  "sleep": {
    "enable": 1,
    "checkInterval": 10,
    "sleepAfter": 60
  }
}
