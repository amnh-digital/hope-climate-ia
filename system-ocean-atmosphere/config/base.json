{
  "calendar": {
    "el": "#calendar"
  },
  "colorKey": {
    "el": "#color-key-canvas"
  },
  "videos": [
    {"url": "video/ocean_atmosphere.mp4", "type": "video/mp4"}
  ],
  "globe": {
    "rotateX": [-20, 380],
    "rotateY": [-45, 45],
    "bgWidth": 1024,
    "bgHeight": 512,
    "bgTransparency": 100,
    "annotationLatThreshold": 45,
    "annotationLonThreshold": 30,
    "transitionStep": 0.1,
    "sleepTransitionMs": 2000,
    "markerOpacity": 0.5,
    "circleOpacity": 0.8,
    "markerColor": "$0xhighlight",
    "arrowColor": "0x333333",
    "restingColor": "$0xsecondary"
  },
  "globes": [
    {
      "el": "#ocean-currents",
      "title": "Ocean surface currents<br />and temperature",
      "viewAngle": 45,
      "near": 0.01,
      "far": 1000,
      "radius": 0.5,
      "geojsonLineColor": "#333333"
    },{
      "el": "#atmosphere-wind",
      "title": "Wind speed and air temperature<br />at sea level",
      "videoOffset": 0.5,
      "viewAngle": 45,
      "near": 0.01,
      "far": 1000,
      "radius": 0.5,
      "geojsonLineColor": "#333333"
    }
  ],
  "sleep": {
    "enable": 1,
    "checkInterval": 10,
    "sleepAfter": 60
  }
}
