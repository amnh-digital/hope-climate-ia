{
  "calendar": {
    "el": "#calendar",
    "marker": "#marker"
  },
  "colorKey": {
    "el": "#color-key-canvas"
  },
  "videos": [
    {"url": "video/ocean_atmosphere.mp4", "type": "video/mp4"}
  ],
  "globe": {
    "rotateX": [-20, 380],
    "rotateY": [-45, 45],
    "bgWidth": 1024,
    "bgHeight": 512,
    "bgTransparency": 100,
    "annotationLatThreshold": 45,
    "annotationLonThreshold": 30,
    "transitionStep": 0.1,
    "sleepTransitionMs": 2000,
    "markerOpacity": 0.5,
    "circleOpacity": 0.8
  },
  "globes": [
    {
      "el": "#ocean-currents",
      "title": "Currents and water temperature<br />at the sea surface",
      "viewAngle": 45,
      "near": 0.01,
      "far": 1000,
      "radius": 0.5,
      "geojsonLineColor": "#555555"
    },{
      "el": "#atmosphere-wind",
      "title": "Wind currents and air temperature<br />near the sea surface",
      "videoOffset": 0.5,
      "viewAngle": 45,
      "near": 0.01,
      "far": 1000,
      "radius": 0.5,
      "geojsonLineColor": "#443820"
    }
  ],
  "sleep": {
    "enable": 1,
    "checkInterval": 5,
    "sleepAfter": 60
  }
}
